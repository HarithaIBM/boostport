export ZOPEN_STABLE_URL="https://github.com/boostorg/boost.git"
export ZOPEN_STABLE_DEPS="cmake make zoslib which coreutils comp_clang sed jq"
export ZOPEN_DEV_URL="https://github.com/boostorg/boost.git"
export ZOPEN_DEV_DEPS="cmake make zoslib which coreutils comp_clang sed jq git findutils diffutils bzip2 zlib"
export ZOPEN_BUILD_LINE="DEV"
export ZOPEN_CLONE_SUBMODULES="yes"
export ZOPEN_COMP="clang"

export ZOPEN_BOOTSTRAP="zopen_bootstrap"
export ZOPEN_BOOTSTRAP_OPTS="-with-libraries=thread,chrono --with-toolset=clang --prefix=$ZOPEN_INSTALL_DIR"
export ZOPEN_CONFIGURE=skip
export ZOPEN_CHECK="zopen_check"
export ZOPEN_CLEAN=skip
export ZOPEN_MAKE="zopen_build"
export ZOPEN_MAKE_MINIMAL="yes"
export GIT_DISCOVERY_ACROSS_FILESYSTEM="yes"
export ZOPEN_INSTALL="zopen_install"

zopen_bootstrap()
{
	./bootstrap.sh -with-libraries=thread,chrono,container,filesystem,graph,serialization,date_time,test --with-toolset=clang --prefix=$ZOPEN_INSTALL_DIR
}

zopen_post_install()
{
  echo `pwd`
  find . -type f -name "*.x" -exec cp {} "${ZOPEN_INSTALL_DIR}/lib" \;
}

zopen_install()
{
        echo `pwd`
        cd $ZOPEN_ROOT/boost
        echo `pwd`
        ./b2 install
}
zopen_build()
{
        echo `pwd`
        cd $ZOPEN_ROOT/boost 
        echo `pwd`
        ./b2
        echo "generate headers ............"
        ./b2 headers
}

zopen_check()
{
       echo `pwd`
       cd $ZOPEN_ROOT/boost/libs/chrono/test
       $ZOPEN_ROOT/boost/b2 --clean
       $ZOPEN_ROOT/boost/b2
       cd -

       cd $ZOPEN_ROOT/boost/libs/thread/test
       $ZOPEN_ROOT/boost/b2 --clean
       $ZOPEN_ROOT/boost/b2
       cd -
       
       cd $ZOPEN_ROOT/boost/libs/container/test
       $ZOPEN_ROOT/boost/b2 --clean
       $ZOPEN_ROOT/boost/b2
       cd -

       cd $ZOPEN_ROOT/boost/libs/filesystem/test
       $ZOPEN_ROOT/boost/b2 --clean
       $ZOPEN_ROOT/boost/b2
       cd -

       cd $ZOPEN_ROOT/boost/libs/graph/test
       $ZOPEN_ROOT/boost/b2 --clean
       $ZOPEN_ROOT/boost/b2
       cd -

       cd $ZOPEN_ROOT/boost/libs/serialization/test
       $ZOPEN_ROOT/boost/b2 --clean
       $ZOPEN_ROOT/boost/b2
       cd -

       cd $ZOPEN_ROOT/boost/libs/date_time/test
       $ZOPEN_ROOT/boost/b2 --clean
       $ZOPEN_ROOT/boost/b2
       cd -
}
zopen_init()
{
  # This runs after clone & regular patches are applied
  # and runs before bootstrap, configure, build

  #boostrap.sh path -> located at ./boost/bootstrap.sh
  echo "In ZOPEN_INIT, applying patch to $ZOPEN_ROOT/patches/fix_fileunix"
  git apply $ZOPEN_ROOT/boostPatches/bootstrap.sh.patch

  # aligned_alloc.hpp patch -> located at ./boost/libs/align/aligned_alloc.hpp
  echo "In ZOPEN_INIT, applying patch to $ZOPEN_ROOT/boostPatches/align.patch"
  cd libs/align 
  git apply $ZOPEN_ROOT/boostPatches/align.patch
  cd -

  # asio directory  patch -> located at ./boost/libs/asio
  echo "In ZOPEN_INIT, applying patch to $ZOPEN_ROOT/boostPatches/asio.patch"
  cd libs/asio
  git apply $ZOPEN_ROOT/boostPatches/asio.patch
  cd -

  # math directory  patch -> located at ./boost/libs/math
  echo "In ZOPEN_INIT, applying patch to $ZOPEN_ROOT/boostPatches/math.patch"
  cd libs/math
  git apply $ZOPEN_ROOT/boostPatches/math.patch
  cd -

  # multiprecision directory  patch -> located at ./boost/libs/multiprecision
  echo "In ZOPEN_INIT, applying patch to $ZOPEN_ROOT/boostPatches/multiprecision.patch"
  cd libs/multiprecision
  git apply $ZOPEN_ROOT/boostPatches/multiprecision.patch
  cd -

  # thread directory  patch -> located at ./boost/libs/thread
  echo "In ZOPEN_INIT, applying patch to $ZOPEN_ROOT/boostPatches/thread.patch"
  cd libs/thread
  git apply $ZOPEN_ROOT/boostPatches/thread.hpp.patch
  git apply $ZOPEN_ROOT/boostPatches/thread_data.hpp.patch
  git apply $ZOPEN_ROOT/boostPatches/pthread_helpers.hpp.patch
  cd -

  # build directory  patch -> located at ./boost/tools/build
  echo "In ZOPEN_INIT, applying patch to $ZOPEN_ROOT/boostPatches/build.patch"
  cd tools/build/
  git apply $ZOPEN_ROOT/boostPatches/src_engine.patch
  git apply $ZOPEN_ROOT/boostPatches/gcc.jam.patch
  git apply $ZOPEN_ROOT/boostPatches/toolset.jam.patch
  git apply $ZOPEN_ROOT/boostPatches/clang.jam.patch
  git apply $ZOPEN_ROOT/boostPatches/intel-linux.jam.patch
  git apply $ZOPEN_ROOT/boostPatches/pathscale.jam.patch
  git apply $ZOPEN_ROOT/boostPatches/pgi.jam.patch
  git apply $ZOPEN_ROOT/boostPatches/vacpp.jam.patch
  git apply $ZOPEN_ROOT/boostPatches/xlcpp.jam.patch
  git apply $ZOPEN_ROOT/boostPatches/clang-linux-3.9.0.py.patch
  git apply $ZOPEN_ROOT/boostPatches/gcc-4.8.3-linux.py.patch
  cd -
  
  cd ./libs/iostreams
  git apply $ZOPEN_ROOT/boostPatches/iostreams.Jamfile.v2.patch
  cd -

  cd ./libs/chrono
  git apply $ZOPEN_ROOT/boostPatches/chrono.hpp.patch
  git apply $ZOPEN_ROOT/boostPatches/chrono_io.hpp.patch
  git apply $ZOPEN_ROOT/boostPatches/time_point_io.hpp.patch
  git apply $ZOPEN_ROOT/boostPatches/runtime_resolution.cpp.patch
  git apply $ZOPEN_ROOT/boostPatches/time_point_io.hpp.patch
  git apply $ZOPEN_ROOT/boostPatches/duration_duration_fail.cpp.patch
  git apply $ZOPEN_ROOT/boostPatches/system_clocks.hpp.patch
  cd -

  cd ./libs/test
  git apply $ZOPEN_ROOT/boostPatches/execution_monitor.ipp.patch
  cd -

  cd ./libs/filesystem
  git apply $ZOPEN_ROOT/boostPatches/directory.cpp.patch 
  cd -

  echo `pwd`
}

zopen_pre_configure()
{
 
 var="using clang : clang++ : <compileflags>-DNDEBUG -march=arch10 -D_UNIX03_THREADS -D_POSIX_THREADS -fasm '\\${CPPFLAGS}' '\\${CFLAGS}' '\\${CXXFLAGS}' : 14.0.0 ;"
 awk -v var="$var" '{gsub("using clang ;", var)}1' project-config.jam > temp_file && mv temp_file project-config.jam

 awk -v var="$var" '{gsub("using clang ;", var)}1' project-config.jam > temp_file && mv temp_file project-config.jam

awk -v CPPFLAGS="$CPPFLAGS" -v CXXFLAGS="$CXXFLAGS" -v ZOPEN_EXTRA_LDFLAGS="$ZOPEN_EXTRA_LDFLAGS" -v LIBS="$LIBS" '
    /<toolset>como-linux:<define>_GNU_SOURCE=1/ {
        print
        if (getline next_line && index(next_line, "cxxflags") == 0) {
            if (length(CPPFLAGS) > 0 || length(CXXFLAGS) > 0) {
                print "<toolset>clang:<cxxflags>\"" CPPFLAGS " " CXXFLAGS "\""
            }
            if (length(ZOPEN_EXTRA_LDFLAGS) > 0 || length(LIBS) > 0) {
                print "<toolset>clang:<linkflags>\"" ZOPEN_EXTRA_LDFLAGS " " LIBS "\""
            }
        } else {
            print next_line
        }
        next
    }
    1
' Jamroot > temp && mv temp Jamroot
cd -
}
zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"
  failures=$(egrep "^\.\.\.failed" $chk | wc -l) 
  failures_as_expected=$(egrep "^(failed-as-expected)" $chk | wc -l) 
  skipped=$(egrep "^\.\.\.skipped" $chk | wc -l)
  passed=$(egrep "^\*\*passed" $chk | wc -l)
  totalTests=$(($failures+$skipped+$passed+$failures_as_expected))


  # Echo the following information to gauge build health
cat <<ZZ
  actualFailures:${failures}
  totalTests:${totalTests}
  expectedFailures:${failures}
ZZ
}

